<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限（用于检测更新） -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- 读取外部存储权限（用于访问图片文件） -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <!-- 写入外部存储权限（用于下载更新文件） -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    <!-- Android 13+ 需要的新权限 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- Android 8.0+ 安装APK权限 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <!-- Android 11+ 访问所有文件权限（用于访问U盘等外置存储） -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <!-- 声明这是TV应用，触摸屏不是必需的 -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <!-- 声明Leanback支持（TV界面） - 改为false以同时支持TV和普通Android设备 -->
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />
    
    <!-- 支持大屏幕和高分辨率显示 -->
    <supports-screens
        android:smallScreens="false"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true"
        android:requiresSmallestWidthDp="600" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/flow_album"
        android:banner="@drawable/flow_album"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlowAlbum"
        android:requestLegacyExternalStorage="true"
        android:hardwareAccelerated="true"
        android:largeHeap="true">
        
        <!-- 幻灯片播放Activity（主Activity） -->
        <activity
            android:name=".SlideshowActivity"
            android:exported="true"
            android:banner="@drawable/flow_album"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout|uiMode|density"
            android:theme="@style/Theme.FlowAlbum.Fullscreen"
            android:hardwareAccelerated="true"
            android:resizeableActivity="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- TV启动器 -->
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
                <!-- 普通启动器（用于显示在所有应用列表中） -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 原有的MainActivity保留作为备用 -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
    </application>

</manifest>